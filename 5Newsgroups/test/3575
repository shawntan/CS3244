  /* signal macro */
+ #ifdef svr4
+ #defin hold_sig         sighold(sigalrm)
+ #defin releas_sig      sigrels(sigalrm)
+ #defin paus_sig        sigpaus(sigalrm)
+ #els
  #defin hold_sig         sigblock(sigmask(sigalrm))
  #defin releas_sig      sigblock(0)
  #defin paus_sig        sigpaus(0)
+ #endif
  
  
